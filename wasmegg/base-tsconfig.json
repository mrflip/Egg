{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "useUnknownInCatchVariables": false,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["esnext", "dom"],
    "types": [],
    "paths": {
      "@/*": ["src/*"],
      "ui/*": ["../../ui/*"],
      "lib": ["../../lib"],
      "lib/*": ["../../lib/*"]
    }
  }
}
